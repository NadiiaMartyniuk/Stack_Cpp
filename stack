#include <iostream>
#include <fstream>
#include <cmath>
#include <sstream>
#include <cstdio>
using namespace std;

struct element{
    int number;
    element* next;
};
struct element2{
    string number;
    element* next;
};

void push(element*&stack, int value){ //dodanie elementu
    element *el;
    el=new element;
    el->number=value;
    el->next=stack;
    stack=el;
}

void pop(element*&stack){ //usuniecie elementu
    element *temp;
    temp=stack;
    stack=stack->next;
    delete temp;
}

int isEmpty(element* stack){ //sprawdzanie czy stos jest pusty
if (stack==nullptr)
    return 1;
return 0;
}

int top(element* stack){ //pobranie elementu ze stosu
return stack->number;
}

